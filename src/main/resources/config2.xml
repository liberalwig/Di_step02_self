<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <!--Printer printer = new MonoPrinter();-->
    <bean id="mprinter" class="com.mono.di.ui.MonoPrinter"></bean>
    <bean id="cprinter" class="com.mono.di.ui.ColorPrinter"></bean>
    <bean id="bprinter" class="com.mono.di.ui.BluePrinter"></bean>


    <!--Hello hello = new Hello(cprinter, "Green"-->
    <bean id="hello" class="com.mono.di.entity.Hello">
        <constructor-arg index="0" ref="bprinter"/>
        <constructor-arg index="1" value="Green"/>
    </bean>
</beans>